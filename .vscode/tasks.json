			"label": "Start MCP Fallback",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"run",
				"mcp:fallback"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"line": 0
