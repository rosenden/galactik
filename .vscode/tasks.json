{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Storybook React (6006)",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"--filter",
				"storybook-react",
				"storybook"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"line": 0
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*storybook dev.*",
					"endsPattern": "^.*Local:.*http://localhost:6006.*"
				}
			}
		},
